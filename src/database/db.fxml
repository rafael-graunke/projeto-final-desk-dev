<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="database.DbController">
   <children>
      <Label layoutX="11.0" layoutY="20.0" text="Conexão com o banco de dados:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="10.0" layoutY="43.0" text="(MySQL ou MariaDB)">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="11.0" layoutY="94.0" text="IP ou Hostname:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="ip_field" layoutX="128.0" layoutY="91.0" prefHeight="25.0" prefWidth="158.0" promptText="Ex.: 127.0.0.1" />
      <Label layoutX="11.0" layoutY="134.0" text="Nome do Banco:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="name_field" layoutX="128.0" layoutY="131.0" prefHeight="25.0" prefWidth="158.0" promptText="Ex.: test" />
      <Label layoutX="11.0" layoutY="176.0" text="User do Banco:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="user_field" layoutX="128.0" layoutY="173.0" prefHeight="25.0" prefWidth="158.0" />
      <Label layoutX="13.0" layoutY="216.0" text="Senha do User:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <PasswordField fx:id="password_field" layoutX="128.0" layoutY="214.0" prefHeight="25.0" prefWidth="158.0" />
      <Button fx:id="test_btn" layoutX="128.0" layoutY="260.0" mnemonicParsing="false" onAction="#testConnection" prefHeight="30.0" prefWidth="158.0" text="Testar Conexão">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <ImageView fx:id="image_field" fitHeight="40.0" fitWidth="40.0" layoutX="70.0" layoutY="255.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="save_btn" layoutX="14.0" layoutY="356.0" onAction="#saveConnection" mnemonicParsing="false" prefHeight="30.0" prefWidth="131.0" text="Salvar Conexão">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="cancel_btn" layoutX="155.0" layoutY="356.0" onAction="#cancel" mnemonicParsing="false" prefHeight="30.0" prefWidth="131.0" text="Cancelar">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
